<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTitleStyle" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="SocialsSigninButton" parent="AppTheme">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FacebookLoginButton" parent="SocialsSigninButton">
        <item name="android:background">#3B5998</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
